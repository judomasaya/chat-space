.main-chat
  .main-chat__header
    .main-chat__box
      %p.main-chat__box__title
        = @group.name
      %p.main-chat__box__member
        Member : 
        - @group.users.each do |user|
          %li.main-chat__box__member
            = user.name
    .main-chat__edit
      = link_to "Edit", edit_group_path(@group.id)
      

  .messages
    = render @messages


  .main-chat__footer
    = form_for [@group, @message] do |f|
      .main-chat__create
        = f.text_field :content, class: 'main-chat__create__type', placeholder: 'type a message'
        -# .main-chat__image
        = f.label :image, class: 'main-chat__image__p' do
          = icon('fas', 'image', class: "icon")
          = f.file_field :image, class: 'main-chat__image__p__icon'
      = f.submit 'Send', class: 'main-chat__push'

